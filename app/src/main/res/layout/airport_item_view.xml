<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/two"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/eight">

            <TextView android:id="@+id/txt_airport_name"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_eighteen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Airport Name"/>

            <TextView android:id="@+id/lbl_airport_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/eight"
                android:paddingLeft="@dimen/eight"
                android:paddingStart="@dimen/eight"
                android:layout_marginTop="@dimen/eight"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/txt_airport_name"
                app:layout_constraintRight_toLeftOf="@+id/txt_airport_code"
                app:layout_constraintLeft_toLeftOf="@+id/txt_airport_name"
                android:text="Airport Code: "/>

            <TextView android:id="@+id/txt_airport_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight"
                app:layout_constraintTop_toBottomOf="@+id/txt_airport_name"
                app:layout_constraintLeft_toRightOf="@+id/lbl_airport_code"
                android:text="ABZ"/>

            <TextView android:id="@+id/lbl_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/txt_airport_name"
                app:layout_constraintRight_toLeftOf="@+id/txt_country_code"
                android:text="Country Code: "/>

            <TextView android:id="@+id/txt_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/lbl_airport_code"
                app:layout_constraintRight_toRightOf="parent"
                android:text="NG"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>